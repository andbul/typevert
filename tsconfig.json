{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "inlineSourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "newLine": "LF",
    "removeComments": true
  },
  "include": ["src/**/*"]
}